[Unit]
Description=Kibana Web Application
After=network.target

[Service]
Environment=BABEL_CACHE_PATH=/var/cache/kibana/.babelcache.json

WorkingDirectory=/opt/kibana

User=kibana
Group=kibana

# DATA_DIR should be set in config (path.data directive)
# But to comply with OpenRC script, preserve this
ExecStart=/opt/kibana/bin/kibana --config /etc/kibana/kibana.yml --path.data=/var/lib/kibana

[Install]
WantedBy=multi-user.target
